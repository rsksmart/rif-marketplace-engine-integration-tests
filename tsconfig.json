{
  "compilerOptions": {
    "paths": { "~/*": ["test/*", "scripts/*", "utils/*"] },
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["es2015"],
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "testt"
  },
  "include": ["test/**/**, scripts/*.ts", "utils/*.ts"],
  "exclude": ["node_modules", "dist"],
  "files": ["./hardhat.config.ts"]
}
