{
  "name": "rif-marketplace-engine-integration-tests",
  "version": "0.0.1",
  "description": "QA Integration Tests for Marketplace Engine",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "build": "sh ./scripts/build.sh",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/**/*.ts'",
    "lint": "eslint test/**/*.ts --ext .ts",
    "lint:fix": "eslint test/**/*.ts --ext .ts --fix",
    "format": "prettier  test/**/*.ts !.gitignore !build/**/* !dist/**/* !artifacts/**/* !typechain/**/* --write \"**/*.+(js|ts|json)\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format"
    ]
  },
  "eslintIgnore": [
    "build/**/*",
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rsksmart/rif-marketplace-engine-integration-tests.git"
  },
  "keywords": [
    "QA",
    "Integration",
    "Tests",
    "Marketplace",
    "Engine",
    "SDK"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rsksmart/rif-marketplace-engine-integration-tests/issues"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@openzeppelin/contracts": "^4.4.1",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "rif-marketplace-engine-sdk": "github:rsksmart/rif-marketplace-engine-sdk",
    "rif-marketplace-engine": "github:rsksmart/rif-marketplace-engine",
    "truffle-hdwallet-provider": "^1.0.17"
  },
  "homepage": "https://github.com/rsksmart/rif-marketplace-engine-integration-tests.git#readme",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
